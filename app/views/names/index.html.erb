<p style="color: green"><%= notice %></p>

<h1>Names</h1>

<div class="card">
  <div data-controller="hello">
    <input data-hello-target="name" type="text">
    <button data-action="click->hello#greet">Greet</button>
  </div>
  </div>


<div id="names">
  <% @names.each do |name| %>
    <%= render name %>
    <p>
      <%= link_to "Show this name", name %>
    </p>
  <% end %>
</div>

<%= link_to "New name", new_name_path %>
